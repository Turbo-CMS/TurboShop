<?xml version="1.0" encoding="UTF-8"?>
<module>
	<name>
		Payeer
	</name>
	<settings>
		<variable>payeer_order_status</variable>
		<name>Order status after payment:</name>
		<options>
			<name>new</name>
			<value>0</value>
		</options>
		<options>
			<name>accepted</name>
			<value>1</value>
		</options>
		<options>
			<name>completed</name>
			<value>2</value>
		</options>
		<options>
			<name>deleted</name>
			<value>3</value>
		</options>
	</settings>
	<settings>
		<variable>payeer_merchanturl</variable>
		<name>Merchant URL (specify https://payeer.com/merchant/):</name>
	</settings>
	<settings>
		<variable>payeer_merchantid</variable>
		<name>Store ID:</name>
	</settings>
	<settings>
		<variable>payeer_secret</variable>
		<name>The secret key:</name>
	</settings>
	<settings>
		<variable>payeer_ip_list</variable>
		<name>IP - Filter:</name>
	</settings>
	<settings>
		<variable>payeer_email</variable>
		<name>Email for alerts</name>
	</settings>
	<settings>
		<variable>payeer_log</variable>
		<name>Path to the transaction log (for example, /payeer_orders.log)</name>
	</settings>
</module>